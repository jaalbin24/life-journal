<div class="w-full min-h-full flex">
  <div class="w-2/3 mx-auto flex flex-col items-center justify-center gap-3">
    <h1 class="font-semibold"><%= greeting current_user %></h1>
    <h3 class="opacity-50">Today is <%= DateTime.current.strftime("%A %B %d, %Y") %></h3>
    <%= link_to new_entry_path, class: "btn-primary w-48 text-2xl my-8" do %>
      <%= embedded_svg "plus.svg", class: "w-6 h-6" %>
      New Entry
    <% end %>
    <div class="flex gap-2 w-full">
      <div class="card w-full">
        <div class="card-body">
          <% @person_of_the_day = Person.all.sample %>
          <div class="flex gap-2 items-center">
            <%= avatar @person_of_the_day, class: "w-20 h-20" %>
            <div class="flex flex-col">
              <h4 class="font-semibold"><%= @person_of_the_day.name %></h4>
              <span class="opacity-50 -mt-1">Person of the day</span>
            </div>
          </div>
        </div>
      </div>
      <div class="card w-full">
        <div class="card-body">
          <h4 class="opacity-50">Today's Quote</h4>
          <div class="flex my-4 gap-2 justify-center">
            <%= embedded_svg "left_quote_mark.svg", class: "w-4 h-4 shrink-0 text-sky-600" %>
            <blockquote class="text-white">
              <%= @quote_of_the_day&.content %>
            </blockquote>
            <%= embedded_svg "right_quote_mark.svg", class: "w-4 h-4 mt-auto shrink-0 text-sky-600 align-right" %>
          </div>
          <figcaption class="text-right">
            <cite class="opacity-50">â€” <%= @quote_of_the_day&.citation %></cite>
          </figcaption>
          <hr class="my-4 border-slate-600">
          <button class="btn-secondary float-right" data-controller="modal" data-action="click->modal#openModal" data-modal-url-value="<%= quote_path @quote_of_the_day %>">What does this mean?</button>
        </div>
      </div>
    </div>
  </div>
</div>