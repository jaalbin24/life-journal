<div class="w-full h-full flex flex-col">
  <div class="p-4 m-4 rounded border border-neutral-700 bg-slate-800">
    <%=link_to "New picture", new_picture_path, class: "btn-primary"%>
  </div>
  <div class="p-4 w-full">
    <div class="grid grid-cols-6 gap-3">
      <%@pictures.each do |p|%>
        <div class="basis-1/3 grow">
          <div class="flex flex-col overflow-hidden card h-full">
            <div class="h-72 bg-zinc-900">
              <%=image_tag p.file, class: "h-full w-full object-cover hover:object-contain"%>
            </div>
            <div class="card-body flex justify-center items-center">
              <p class="text-center opacity-50">
              <%=p.description%>
              </p>
            </div>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>
