<div class="flex w-full h-full">
  <div class="card m-auto w-1/4">
    <div class="card-body">
      <h2 class="text-center font-bold my-5">Sign in</h2>
      <div class="my-3 flex justify-center">
        <%if @user.errors[:base].any? %>
          <p class="form-error-message"><%= @user.errors[:base].first %></p>
        <% end %>
      </div>
      <%=form_with model: @user, url: sign_in_path do |f|%>
        <div class="my-5">
          <%= f.label :email, class: "form-label" %>
          <%= f.text_field :email, class: "input-field", placeholder: "Enter your email", autofocus: true %>
        </div>
        <div class="my-5">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, class: "input-field", placeholder: "Enter your password" %>
        </div>
        <div class="my-5 flex items-center gap-2">
          <%= check_box_tag :stay_signed_in, 1, false, class: "input-field check-box" %>
          <%= label_tag :stay_signed_in, "Stay signed in", class: "form-label"%>
        </div>
        <div class="flex mt-8 w-full justify-between items-center">
         <%= f.submit "Sign in", class: "btn-primary" %>
         <%= link_to "Sign up", new_user_path, class: "text-blue-500 hover:underline" %>
        </div>
      <%end%>
    </div>
  </div>
</div>