<div class="flex w-full h-full">
  <div class="card m-auto w-1/3">
    <div class="card-body">
      <h3 class="text-center font-bold">Sign in</h3>
      <div class="my-3 flex justify-center">
        <%if @user.errors[:base].any? %>
          <p class="form-error-message"><%= @user.errors[:base].first %></p>
        <% end %>
      </div>
      <%=form_for @user, url: sign_in_path do |f|%>
        <div class="my-5">
          <%=f.label :email, class: "form-label"%>
          <%=f.text_field :email, class: "input-field", placeholder: "Enter your email", autofocus: true%>
        </div>
        <div class="my-5">
          <%=f.label :password, class: "form-label"%>
          <%=f.password_field :password, class: "input-field", placeholder: "Enter your password"%>
        </div>
        <div class="flex w-full justify-between items-center">
         <%=f.submit "Sign in", class: "btn-primary"%>
         <%= link_to "Sign up", new_user_path, class: "text-blue-500 hover:underline"%>
        </div>
      <%end%>
    </div>
  </div>
</div>