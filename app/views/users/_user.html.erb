<div id="<%= dom_id user %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Email:</strong>
    <%= user.email %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Password digest:</strong>
    <%= user.password_digest %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this user", user, class: "btn-secondary" %>
    <%= link_to 'Edit this user', edit_user_path(user), class: "btn-secondary" %>
    <hr class="mt-6">
  <% end %>
</div>
