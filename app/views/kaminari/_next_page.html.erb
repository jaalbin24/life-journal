<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<%= link_to_unless current_page.last?, (embedded_svg 'chevron_right.svg', class: "w-4 h-4"), url, rel: 'next', remote: remote, class: "page", data: { turbo_stream: true} do %>
  <span class="page disabled">
    <%= embedded_svg 'chevron_right.svg', class: "w-4 h-4" %>
  </span>
<% end %>