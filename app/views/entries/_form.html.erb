<div class="grid grid-cols-4 grow gap-2 mt-3">
  <div class="col-span-3 flex flex-col grow">
    <%= form_with model: @entry, class: "flex flex-col grow gap-4", data: { controller: "entries" } do |f| %>
      <%= f.hidden_field :status %>
      <div class="flex gap-2">
        <%= f.text_field :title, class: "form-field", placeholder: "Title" %>
        <%= turbo_frame_tag 'entry-save-bar', class: "w-1/3 shrink-0 flex gap-2 justify-between items-center" do %>
          <%= render 'save_bar' %>
        <% end %>
      </div>
      <div class="grow flex flex-col">
        <%= f.rich_text_area :content, class: "grow form-field focus:bg-opacity-30 hover:bg-opacity-30 outline-none", placeholder: "What's on your mind?" %>
      </div>
    <% end %>
  </div>
  <div class="flex flex-col gap-2">
    <% if @entry.persisted? %>
      <%= render 'search_bar' %>
      <%= turbo_frame_tag 'mentions', class: "grow max-h-screen", data: { "test-id": "mentions-turbo-frame" } do %>
        <%= render 'mentions/collection' %>
      <%end%>
    <% else %>
      <div class="border border-2 border-dashed border-slate-700 h-full rounded-lg">
        <div class="p-4 flex flex-col justify-center items-center h-full">
          <h5 class="text-center font-bold text-slate-700">Mentions go here</h5>
          <p class="text-center text-slate-700">
            Save your entry before adding mentions.
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>