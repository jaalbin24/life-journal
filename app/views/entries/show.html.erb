<div class="w-full flex justify-center">
  <div class="w-2/3 p-5">
    <div class="flex mb-5">
      <div class="grow">
        <span class="entry-title"><%=@entry.title%></span>
        <div class="flex flex-row align-center gap-3 mt-1">
          <h5 class="my-auto text-gray-400"><%= entry_last_updated(@entry) %></h5>
          <div class="flex flex-row">
            <%@entry.people.each_with_index do |p, i|%>
              <%=render partial: 'people/avatar', locals: {person: p, css_class: "#{'-ml-2' unless i == 0}", size: 32}%>
            <%end%>
          </div>
        </div>
      </div>
      <div class="flex flex-col gap-2 shrink-0">
        <%=edit_entry_button(@entry)%>
        <%=delete_entry_button(@entry)%>
      </div>
    </div>
    <div class="card">
      <div class="card-body">
        <%= @entry.content %>
      </div>
    </div>
  </div>
</div>