<div class="w-full h-full flex flex-col">
  <div class="bg-slate-700 w-full p-4 flex justify-between">
    <div class="flex flex-col gap-1">
      <h2 class="font-bold"><%=@entry.title%></h2>
      <div class="flex flex-row align-center gap-3">
        <h5 class="my-auto text-gray-400"><%=@entry.published_at.blank? ? "Unknown date" : @entry.published_at.strftime("%b %d, %Y")%></h5>
        <div class="flex flex-row">
          <%@entry.people.each_with_index do |p, i|%>
            <%=image_tag p.avatar, size: 32, class: "#{'-ml-2' unless i == 0} person-avatar"%>
          <%end%>
        </div>
      </div>
    </div>
    <!--<h1><%=@entry.published_at.in_time_zone("Central Time (US & Canada)").strftime("%b %d, %Y")%></h1>-->
    <div class="flex gap-2 mt-auto">
      <%= link_to 'Edit this entry', edit_entry_path(@entry), class: "btn-primary" %>
      <%= button_to 'Destroy this entry', entry_path(@entry), method: :delete, class: "btn-primary" %>
    </div>
  </div>
  <div class="flex p-3 gap-3">
    <div class="basis-2/3 card">
      <div class="card-body">
        <%=@entry.text_content%>
      </div>
    </div>
    <div class="basis-1/3">
      <%if @entry.picture_of_the_day.attached?%>
        <%= image_tag @entry.picture_of_the_day, class: "rounded" %>
      <%end%>
    </div>
  </div>
</div>