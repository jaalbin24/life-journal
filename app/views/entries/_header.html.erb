<div class="m-4 mb-0 flex flex-col gap-2">
  <div class="flex justify-between items-center">
    <div class="flex gap-2 grow">
      <div class="flex gitems-center gap-4">
        <h2 class="font-bold">Entries</h2>
        <a href="<%=new_entry_path%>" class="btn-primary m-auto">
          <%= embedded_svg "plus.svg", class: "w-4 h-4" %>
          New entry
        </a>
      </div>
      <% if @keyword %>
        <h4 class="flex items-center">
          <% if @keyword.blank? %>
            Showing all entries
          <% else %>
            Showing results for<span class="font-medium ml-2">"<%=@keyword%>"</span>
          <% end %>
        </h4>
      <% end %>
    </div>
    <div class="basis-1/3 shrink-0">
      <%= form_with url: search_entries_path, method: :get do |f| %>
        <%= f.label :search, class: "hidden" %>
        <div class="relative">
          <button class="absolute inset-y-0 left-0 flex items-center pl-3">
            <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
            </svg>
          </button>
          <%= f.text_area :keyword, class: "resize-none w-full pl-10 input-field", placeholder: "Search for an entry...", rows: 1, wrap: "off", id: "search", type: "search", data: { controller: "search" } %>
        </div>
      <%end%>
    </div>
  </div>
  <%= render "layouts/tab_bar_collection", model: :entries, tabs: [:all, :published, :drafts, :trash], active_tab: @tab %>
</div>