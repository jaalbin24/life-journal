<div class="tab-bar">
  <ul class="flex flex-wrap">
    <li class="mr-2">
      <%= link_to "All", tab_people_path(:all), class: ([:all, nil].include?(@tab) ? "tab tab-active" : "tab") %>
    </li>
    <li class="mr-2">
      <%= link_to "Trash", tab_people_path(:trash), class: (@tab == :trash ? "tab tab-active" : "tab") %>
    </li>
  </ul>
</div>