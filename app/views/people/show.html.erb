<div class="w-full h-full p-3 grid grid-cols-12 grid-rows-6 gap-3">


    <div class="card col-span-6 row-span-2">
        <div class="card-body flex flex-row gap-3 items-center">
            <%=render partial: 'people/avatar', locals: {person: @person, css_class:"hover:scale-100", size: 200}%>
            <div class="my-auto flex flex-col gap-2">
                <h1><%=@person.name%></h1>
                <ul class="flex gap-2">
                    <%@person.traits.each do |t|%>
                        <li class="rounded-full px-2 py-1 <%=color_class(t)%>">
                            <%=t.word%>
                        </li>
                    <%end%>
                </ul>
            </div>
        </div>
    </div>

    <div class="card col-span-6 row-span-3">
        <div class="card-body">
            <h3 class="mb-3">Mentions</h3>
            <ul class="flex flex-wrap overflow-auto gap-2">
                <%@person.entries.each do |e|%>
                    <li class="py-1 px-2 bg-slate-700 rounded-lg shrink">
                        <div class="flex">
                            <a href="<%=entry_path(e)%>" class="shrink flex font-bold hover:scale-101 h3">
                                <h3 class="shrink"><%=e.title.blank? ? "Untitled" : e.title%></h3>
                            </a>
                        </div>
                        <div class="flex flex-row align-center gap-3">
                            <h6 class="my-auto"><%=e.published_at.blank? ? "Unknown date" : e.published_at.strftime("%b %d, %Y")%></h6>
                            <div class="flex flex-row">
                                <%e.people.each_with_index do |p, i|%>
                                <%=render partial: 'people/avatar', locals: {person: p, css_class: "#{'-ml-2' unless i == 0}", size: 24, tooltip: true}%>
                                <%end%>
                            </div>
                        </div>
                    </li>
                <%end%>
            </ul>
        </div>
    </div>

    <div class="card col-span-6 row-span-4">
        <div class="card-body">
            <h3>Notes</h3>

        </div>
    </div>

    <div class="card col-span-6 row-span-3">
        <div class="card-body">
            <h3>Lessons taught</h3>

        </div>
    </div>

</div>